<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BlackColor" po:Freeze="True">#FFFFFFFF</Color>
    <Color x:Key="WhiteColor" po:Freeze="True">#FF252525</Color>
    <SolidColorBrush x:Key="NormalWhiteBrush" Color="{StaticResource WhiteColor}" po:Freeze="True"/>
    <SolidColorBrush x:Key="NormalBlackBrush" Color="{StaticResource BlackColor}" po:Freeze="True"/>
</ResourceDictionary>